
<div class="col-12 cpr-row bg-grey-1 p-2 mb-2">
									
	{# Action menu for row #}
	<div class="nav-action-left">
		<div class="btn btn-secondary access"><span class="fa fa-bars action"></span></div>
		<div class="btn-group panel-action">
			<div class="btn btn-secondary"><span class="fa fa-arrows action"></span></div>
			<div class="btn btn-secondary cut-row"><span class="fa fa-th-large action"></span></div>
			<div class="btn btn-secondary edit"><span class="fa fa-pencil action"></span></div>
			<div class="btn btn-secondary remove"><span class="fa fa-trash action"></span></div>
		</div>
	</div>
	
	
	{# if this row have columns #}
	{% if row.column|length > 0 %}
		{% for column in row.column %}
		
			<div class="col-md-12 mb-2 cpr-column bg-white p-2">

				{# Action menu for column #}
				<div class="nav-action-right">
					<div class="btn btn-secondary access"><span class="fa fa-bars action"></span></div>
					<div class="btn-group panel-action">
						<div class="btn btn-secondary remove"><span class="fa fa-trash action"></span></div>
						<div class="btn btn-secondary add-block"><span class="fa fa-plus-circle action"></span></div>
						<div class="btn btn-secondary edit"><span class="fa fa-pencil action"></span></div>
						<div class="btn btn-secondary"><span class="fa fa-arrows action"></span></div>
					</div>
				</div>
				
				
				
				{# if this column have blocks #}
				{% if column.block|length > 0 %}
					{% for block in column.block %}
						
						{% set blockInfo = block.vars.value.block %}
						
						<div class="row">
							<div class="col-11 p-1 m-auto cpr-block text-center" data-block-content="{{ blockInfo.content }}">

								{# Action menu for block #}
								<div class="nav-action">
									<span class="fa fa-pencil action btn-edit-block mr-2 edit"></span>
									<span class="fa fa-trash action btn-trash-edit remove"></span>
								</div>

								<div class="form-block">
									{{ form_widget(block) }} 
								</div>

								<div class="row">
									<div class="col-12 text-center">
										<span class="cpr-block-icon {{ blockInfo.icon }}"></span>
									</div>
								</div>

								<div class="row">
									<div class="col-12 text-center text-capitalize">
										<span class="cpr-block-title">{{ blockInfo.name }}</span>
									</div>
								</div>

								<div class="row">
									<div class="col-12 cpr-block-row">
										{% if blockInfo.content == 'row' %}
											
										{% endif %}
									</div>
								</div>

							</div>
						</div>

					{% endfor %}
				{% endif %}
				
				
				
				<div class="form-column">
					{{ form_widget(column) }}
					{# widget for prototype #}
					<div id="{{column.block.vars.id}}" data-prototype="{{ form_widget(column.block.vars.prototype)|e }}" class="hidden"></div>
				</div>

			</div>
		
		{% endfor %}
	{% endif %}
	
	<div class="row">
		<div class="col-12">
			<div class="form-row">
				{# Form of this row #}
				{{ form_widget(row) }}
				{# widget for prototype #}
				<div id="{{row.column.vars.id}}" data-prototype="{{ form_widget(row.column.vars.prototype)|e }}" class="hidden"></div>
			</div>
		</div>
	</div>
	
</div>
