<script>
	// MASTER
	var $menuContainer = '#back-menu',
		$menuList = '.menu-container',
		$fullHead = '.jiti-head',
		$shortHead = '.jiti-head-bis',
		$menuContent = '.menu-content',
		$menuItem = '.item',
		$menuDropdown = '.sub-item',
		$menuPhone = '.phone-menu',
		clickPhoneMenu = false;
	
	$($menuDropdown).slideUp();
	
	// Menu container animation
	var openMenu = function()
		{
			var $this = $($menuContainer);
			$this.stop();
			$this.animate({'width' : '200px'}, 0700, hideShortHead);
		};
	var closeMenu = function()
		{
			var $this = $($menuContainer);
			$this.stop();
			$this.animate({'width' : '70px'}, 1000, function()
				{
					if( $($menuContainer).css('min-height') == 'auto' ) $($menuList).hide('slow');
				});
		};
	var phoneMenu = function()
		{
			var $this = $($menuContainer);
			$this.stop();
			$($menuList).show('slow');
		};
		
		
	// Menu head animation	
	var showShortHead = function()
		{
			var $this = $($menuContainer).find($shortHead);
			$this.stop();
			$this.show();
			$this.animate({'opacity' : 1},0500);
		};
	var hideShortHead = function()
		{
			var $this = $($menuContainer).find($shortHead);
			$this.stop();
			$this.animate({'opacity' : 0},0500,function()
				{
					var $this = $($menuContainer).find($shortHead);
					$this.hide();
					showFullHead();
				});
			showContentMenu();
		};
	var showFullHead = function()
		{
			var $this = $($menuContainer).find($fullHead);
			$this.stop();
			$this.show();
			$this.animate({'opacity' : 1},0500);
		};
	var hideFullHead = function(e)
		{
			var $this = $($menuContainer).find($fullHead);
			$this.stop();
			$this.animate({'opacity' : 0},0500,function()
				{
					var $this = $($menuContainer).find($fullHead);
					$this.hide();
					closeMenu();
					hideContentMenu();
					showShortHead();
				});
		};
		
		
	//Menu item animation
	var showContentMenu = function()
		{
			var $this = $($menuContainer).find($menuContent);
			$this.stop()
			$this.show();
			$this.animate({'left' : '0','opacity':1},0200);
		};
	var hideContentMenu = function()
		{
			var $this = $($menuContainer).find($menuContent);
			$this.stop();
			$this.animate({'left' : '-200px','opacity':0},0500,function()
				{
					$this.hide();
				});
		};
	
	
	// Menu dropdown animation
	var showDropdown = function()
		{
			var $this = $(this).find($menuItem),
				dropdown = $this.next($menuDropdown);
			$(dropdown).stop();
			dropdown.slideDown('slow');
		};
	var hideDropdown = function()
		{
			var $this = $(this).find($menuItem);
				dropdown = $this.next($menuDropdown);
			$(dropdown).stop();
			dropdown.slideUp('slow');
		};
	
	// Menu
	$($menuContainer).on('click',openMenu);
	$($menuContainer).on('mouseenter',openMenu);
	$($menuContainer).on('mouseleave',hideFullHead);
	//Menu item
	$($menuContent).on('click',showDropdown);
	$($menuContent).on('mouseenter',showDropdown);
	$($menuContent).on('mouseleave',hideDropdown);
	//Phone menu
	$($menuPhone).on('click',phoneMenu);
	
</script>