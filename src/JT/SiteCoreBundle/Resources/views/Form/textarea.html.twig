{% set name = field.slug %}
{% set label = field.name %}
{% set value = field.fieldValue %}
{% set class = field.htmlClass %}
{% set id = field.htmlId %}
{% set required = field.fieldRequired ? 'required' : '' %}

<textarea name="{{ name }}" id="{{ id }}" rows="5" {{ required }} placeholder="{{ label }}" class="form-control {{ class }}"/>{{ value }}</textarea>
<span class="ast"></span>













